{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <div class="row mt-2 text-center">
        <h1>My profile</h1>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            {{ form(profileUserForm) }}
        </div>
    </div>   
    <hr class="border col-4 offset-4 border-dark border-1 opacity-25">
    <div class="row my-4">
        <div class="col-6 offset-3">
            {% if app.user and app.user.profile %}
                {{ include('profile/_form.html.twig', {'button_label': 'Edit'}) }}
            {% else %}
                {{ include('profile/_form.html.twig', {'button_label': 'Add'}) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
